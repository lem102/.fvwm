WindowTitle {DateTime}
WindowSize  160 20
Font "xft:DejaVu Sans:regular:size=10:antialias=True" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%H:%M - %a %b %d"} 1 -1)

  ChangeTitle 1 $Time
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
    Set $Time = (GetOutput {exec date "+%H:%M - %a %b %d"} 1 -1)

    ChangeTitle 1 $Time
  End
End

Widget 1
Property
 Position 0 0
 Size 160 20
 Font "xft:DejaVu Sans:regular:size=11:antialias=True"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
